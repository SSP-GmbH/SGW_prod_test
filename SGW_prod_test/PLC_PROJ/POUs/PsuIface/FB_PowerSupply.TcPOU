    <Method Name="SetVoltage" Id="{c6b04aa2-4d3e-4b68-8450-de860b530b4f}">
      <Declaration><![CDATA[METHOD SetVoltage

VAR_INPUT
	volts : REAL;
END_VAR

VAR
	raw : UINT;
END_VAR
]]></Declaration>
      <Implementation>
        <ST><![CDATA[
raw := VoltageToRaw(volts);

fbSend(
	SendString := CONCAT(CONCAT('VSET1:', REAL_TO_STRING(volts)), CHR(10)),
	TxBuffer   := bufTx,
	Error      => _err
);
]]></ST>
      </Implementation>
    </Method>
