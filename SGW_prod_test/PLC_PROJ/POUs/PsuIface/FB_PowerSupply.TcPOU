      </Implementation>
    </Method>
    <Method Name="GetVoltage" Id="{5cbe3dd5-384a-4941-8c1b-2d53f1e3ea31}">
      <Declaration><![CDATA[METHOD GetVoltage : REAL
VAR
	_str : STRING(80);
END_VAR
]]></Declaration>
      <Implementation>
        <ST><![CDATA[
fbSend(SendString := CONCAT('VSET1?', CHR(10)), TxBuffer := bufTx);

fbRecv(
	Reset           :=  TRUE,
	Suffix          :=  CHR(10),
	Timeout         :=  T#200MS,
	RxBuffer        :=  bufRx,
	ReceivedString  :=  _str,
	busy            =>  _busy,
	StringReceived  =>  _isRecv,
	Error           =>  _err
);

IF _err = COMERROR_NOERROR THEN
	GetVoltage := STRING_TO_REAL(_str);
ELSE
	GetVoltage := -1.0;
END_IF
]]></ST>
      </Implementation>
    </Method>
    <Method Name="Init" Id="{9b6479ca-14f4-4e4a-aad1-b730b0393e2f}">
      <Declaration><![CDATA[METHOD Init : BOOL
]]></Declaration>
      <Implementation>
        <ST><![CDATA[
fbLine(
    Mode      := SERIALLINEMODE_DEFAULT,                   // 8N1, 115 200 Bd …
    pComIn    := ADR(GLOBAL_VARS.X003_In),                 // process-image in
    pComOut   := ADR(GLOBAL_VARS.X003_Out),                // process-image out
    SizeComIn := SIZEOF(GLOBAL_VARS.X003_In),
    TxBuffer  := bufTx,
    RxBuffer  := bufRx
);

Init := TRUE;
]]></ST>
      </Implementation>
    </Method>
